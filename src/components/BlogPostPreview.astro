---
interface Props {
  title: string;
  date: Date;
  description: string;
  slug: string;
  variant?: 'light' | 'dark';
}

const { title, date, description, slug, variant = 'light' } = Astro.props;
const isDark = variant === 'dark';

const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<article class:list={[
  'py-6 first:pt-0 last:border-b-0 border-b',
  isDark ? 'border-white/10' : 'border-slate-200'
]}>
  <a href={`/blog/${slug}`} class="group block">
    <time datetime={date.toISOString()} class:list={[
      'text-sm',
      isDark ? 'text-slate-400' : 'text-slate-500'
    ]}>
      {formattedDate}
    </time>
    <h3 class:list={[
      'mt-1 text-xl font-semibold',
      isDark ? 'text-white group-hover:text-electric-400' : 'text-slate-900 group-hover:text-electric-500'
    ]}>
      {title}
    </h3>
    <p class:list={[
      'mt-2',
      isDark ? 'text-slate-300' : 'text-slate-600'
    ]}>{description}</p>
    <span class:list={[
      'mt-3 inline-block text-sm font-medium',
      isDark ? 'text-electric-400' : 'text-electric-500'
    ]}>
      Read more &rarr;
    </span>
  </a>
</article>
