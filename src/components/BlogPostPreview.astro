---
interface Props {
  title: string;
  date: Date;
  description: string;
  slug: string;
}

const { title, date, description, slug } = Astro.props;

const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<article class="border-b border-slate-200 py-6 first:pt-0 last:border-b-0">
  <a href={`/blog/${slug}`} class="group block">
    <time datetime={date.toISOString()} class="text-sm text-slate-500">
      {formattedDate}
    </time>
    <h3 class="mt-1 text-xl font-semibold text-slate-900 group-hover:text-accent-600">
      {title}
    </h3>
    <p class="mt-2 text-slate-600">{description}</p>
    <span class="mt-3 inline-block text-sm font-medium text-accent-600">
      Read more &rarr;
    </span>
  </a>
</article>
