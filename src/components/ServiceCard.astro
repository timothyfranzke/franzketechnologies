---
interface Props {
  title: string;
  description: string;
  href?: string;
}

const { title, description, href } = Astro.props;
const Tag = href ? 'a' : 'div';
---

<Tag
  href={href}
  class:list={[
    'block rounded-lg border border-slate-200 bg-white p-6 transition-shadow',
    href && 'hover:shadow-md',
  ]}
>
  <h3 class="text-lg font-semibold text-slate-900">{title}</h3>
  <p class="mt-2 text-slate-600">{description}</p>
  {href && (
    <span class="mt-4 inline-block text-sm font-medium text-accent-600">
      Learn more &rarr;
    </span>
  )}
</Tag>
