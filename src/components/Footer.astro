---
const currentYear = new Date().getFullYear();

const quickLinks = [
  { href: '/', label: 'Home' },
  { href: '/#services', label: 'Services' },
  { href: '/about', label: 'About' },
];

const resourceLinks = [
  { href: '/blog', label: 'Blog' },
  { href: '/contact', label: 'Contact' },
];
---

<footer class="bg-navy-900">
  <div class="mx-auto max-w-6xl px-4 py-12 sm:px-6 sm:py-16">
    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-4">
      <!-- Brand -->
      <div class="sm:col-span-2 lg:col-span-1">
        <a href="/" class="flex items-center gap-2 text-xl font-bold">
          <span class="logo-glow-container relative">
            <span class="logo-glow"></span>
            <img src="/logo3.png" alt="Franzke Technologies logo" class="relative h-8 w-8 logo-white" />
          </span>
          <span class="bg-gradient-to-r from-teal-500 to-white bg-clip-text text-transparent">Franzke Technologies</span>
        </a>
        <p class="mt-4 text-sm text-slate-400">
          20 years of architecture experience, accelerated by AI.
        </p>
        <!-- Social Links -->
        <div class="mt-6 flex gap-4">
          <a
            href="https://linkedin.com/in/timothyfranzke"
            target="_blank"
            rel="noopener noreferrer"
            class="flex h-10 w-10 items-center justify-center rounded-full bg-navy-800 text-slate-400 transition-colors hover:bg-navy-700 hover:text-white"
            aria-label="LinkedIn"
          >
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
          <a
            href="mailto:timothy@franzketechnologies.com"
            class="flex h-10 w-10 items-center justify-center rounded-full bg-navy-800 text-slate-400 transition-colors hover:bg-navy-700 hover:text-white"
            aria-label="Email"
          >
            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </a>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-sm font-semibold text-white">Quick links</h3>
        <ul class="mt-4 space-y-3">
          {quickLinks.map(({ href, label }) => (
            <li>
              <a href={href} class="text-sm text-slate-400 transition-colors hover:text-white">
                {label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Resources -->
      <div>
        <h3 class="text-sm font-semibold text-white">Resources</h3>
        <ul class="mt-4 space-y-3">
          {resourceLinks.map(({ href, label }) => (
            <li>
              <a href={href} class="text-sm text-slate-400 transition-colors hover:text-white">
                {label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h3 class="text-sm font-semibold text-white">Contact</h3>
        <ul class="mt-4 space-y-3">
          <li>
            <a href="mailto:timothy@franzketechnologies.com" class="text-sm text-slate-400 transition-colors hover:text-white">
              timothy@franzketechnologies.com
            </a>
          </li>
          <li class="text-sm text-slate-400">
            Kansas City Area
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="mt-12 border-t border-navy-800 pt-8">
      <p class="text-center text-sm text-slate-500">
        &copy; {currentYear} Franzke Technologies. All rights reserved.
      </p>
    </div>
  </div>
</footer>
