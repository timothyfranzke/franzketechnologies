---
interface Props {
  title: string;
  description: string;
  category: string;
  url?: string;
}

const { title, description, category, url } = Astro.props;
---

<div class="rounded-lg border border-slate-200 bg-white p-6">
  <span class="inline-block rounded-full bg-slate-100 px-3 py-1 text-xs font-medium text-slate-600">
    {category}
  </span>
  <h3 class="mt-3 text-lg font-semibold text-slate-900">
    {url ? (
      <a href={url} target="_blank" rel="noopener noreferrer" class="hover:text-accent-600">
        {title}
      </a>
    ) : (
      title
    )}
  </h3>
  <p class="mt-2 text-slate-600">{description}</p>
</div>
