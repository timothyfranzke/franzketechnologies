---
import BaseLayout from '../../layouts/BaseLayout.astro';
import BlogPostPreview from '../../components/BlogPostPreview.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<BaseLayout title="Blog" description="Thoughts on AI, architecture, and shipping software.">
  <!-- Hero -->
  <section class="bg-slate-50 py-16 sm:py-20">
    <div class="mx-auto max-w-6xl px-4 sm:px-6">
      <p class="section-label">From the blog</p>
      <h1 class="mt-4 text-3xl font-bold text-slate-900 sm:text-4xl">Blog</h1>
      <p class="mt-4 max-w-2xl text-lg text-slate-600">
        Thoughts on AI, architecture, and shipping software.
      </p>
    </div>
  </section>

  <section class="py-16 sm:py-20">
    <div class="mx-auto max-w-3xl px-4 sm:px-6">
      {sortedPosts.length > 0 ? (
        <div class="rounded-2xl bg-white p-6 shadow-sm ring-1 ring-slate-200">
          {sortedPosts.map((post) => (
            <BlogPostPreview
              title={post.data.title}
              date={post.data.date}
              description={post.data.description}
              slug={post.slug}
            />
          ))}
        </div>
      ) : (
        <div class="rounded-2xl bg-slate-50 p-12 text-center">
          <p class="text-slate-600">No posts yet. Check back soon!</p>
        </div>
      )}
    </div>
  </section>
</BaseLayout>
