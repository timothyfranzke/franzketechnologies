---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Thank you for contacting Franzke Technologies." />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <title>Thank You | Franzke Technologies</title>
  </head>
  <body class="flex min-h-screen flex-col bg-white text-slate-900">
    <!-- Animated background shapes -->
    <div class="bg-shapes-container">
      <div class="bg-shape bg-shape-1"></div>
      <div class="bg-shape bg-shape-2"></div>
      <div class="bg-shape bg-shape-3"></div>
      <div class="bg-shape bg-shape-4"></div>
    </div>

    <div class="hero-section min-h-screen">
      <Header variant="dark" />

      <!-- Decorative elements -->
      <div class="absolute right-0 top-1/4 h-64 w-64 rounded-full bg-electric-500/10 blur-3xl z-[1]"></div>
      <div class="absolute left-1/4 top-1/2 h-48 w-48 rounded-full bg-purple-500/10 blur-3xl z-[1]"></div>

      <section class="relative z-[2] py-32 sm:py-44 flex items-center justify-center min-h-[80vh]">
        <div class="mx-auto max-w-6xl px-4 sm:px-6">
          <div class="text-center">
            <!-- Success Icon -->
            <div class="mx-auto mb-8 flex h-24 w-24 items-center justify-center rounded-full bg-electric-500/20">
              <svg class="h-12 w-12 text-electric-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
            </div>

            <p class="section-label">Message Received</p>
            <h1 class="mt-4 text-4xl font-bold text-white sm:text-5xl lg:text-6xl">Thank You!</h1>
            <p class="mx-auto mt-6 max-w-2xl text-lg text-slate-300">
              Someone will be in touch with you shortly. We typically respond within 24 hours.
            </p>

            <a
              href="/"
              class="mt-10 inline-block rounded-full border-2 border-electric-500 bg-transparent px-8 py-3 text-base font-medium text-white transition-all hover:bg-electric-500"
            >
              Back to Home
            </a>
          </div>
        </div>
      </section>
    </div>

    <Footer />
  </body>
</html>
