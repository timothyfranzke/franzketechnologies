---
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactForm from '../components/ContactForm.astro';
---

<BaseLayout title="Contact" description="Get in touch to discuss how I can help your team build and deliver faster.">
  <!-- Hero -->
  <section class="bg-slate-50 py-16 sm:py-20">
    <div class="mx-auto max-w-6xl px-4 sm:px-6">
      <p class="section-label">Contact</p>
      <h1 class="mt-4 text-3xl font-bold text-slate-900 sm:text-4xl">Get in touch</h1>
      <p class="mt-4 max-w-2xl text-lg text-slate-600">
        Have a project in mind or want to learn more about how I can help? I'd love to hear from you.
      </p>
    </div>
  </section>

  <section class="py-16 sm:py-20">
    <div class="mx-auto max-w-6xl px-4 sm:px-6">
      <div class="grid gap-12 lg:grid-cols-2">
        <!-- Contact Form -->
        <div>
          <h2 class="text-xl font-semibold text-slate-900">Send a message</h2>
          <p class="mt-2 text-slate-600">Fill out the form and I'll get back to you within a day or two.</p>
          <div class="mt-8">
            <ContactForm />
          </div>
        </div>

        <!-- Other Contact Options -->
        <div>
          <h2 class="text-xl font-semibold text-slate-900">Other ways to connect</h2>
          <p class="mt-2 text-slate-600">Prefer a different method? Here are some alternatives.</p>

          <!-- Calendly Placeholder -->
          <div class="mt-8 overflow-hidden rounded-2xl border border-slate-200 bg-white">
            <div class="border-b border-slate-200 bg-slate-50 px-6 py-4">
              <h3 class="font-medium text-slate-900">Schedule a call</h3>
              <p class="mt-1 text-sm text-slate-600">
                Prefer to talk live? Book a time that works for you.
              </p>
            </div>
            <!-- Calendly embed will go here -->
            <div class="flex items-center justify-center bg-slate-100 p-12">
              <div class="text-center">
                <div class="mx-auto flex h-12 w-12 items-center justify-center rounded-full bg-teal-100">
                  <svg class="h-6 w-6 text-teal-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                </div>
                <p class="mt-3 text-sm text-slate-500">Calendly embed placeholder</p>
              </div>
            </div>
          </div>

          <!-- Direct Contact -->
          <div class="mt-8 space-y-6">
            <div class="flex items-start gap-4">
              <div class="flex h-10 w-10 flex-shrink-0 items-center justify-center rounded-full bg-teal-100">
                <svg class="h-5 w-5 text-teal-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <h3 class="font-medium text-slate-900">Email</h3>
                <a
                  href="mailto:timothy@franzketechnologies.com"
                  class="mt-1 block text-teal-600 hover:text-teal-700"
                >
                  timothy@franzketechnologies.com
                </a>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="flex h-10 w-10 flex-shrink-0 items-center justify-center rounded-full bg-blue-100">
                <svg class="h-5 w-5 text-blue-600" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </div>
              <div>
                <h3 class="font-medium text-slate-900">LinkedIn</h3>
                <a
                  href="https://linkedin.com/in/timothyfranzke"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="mt-1 block text-teal-600 hover:text-teal-700"
                >
                  linkedin.com/in/timothyfranzke
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
