---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import BlogPostPreview from '../components/BlogPostPreview.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog');
const recentPosts = allPosts
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 3);

const services = [
  {
    label: 'AI Consulting',
    title: 'AI Strategy & Implementation',
    description: 'Helping teams figure out where AI fits in their workflow and actually ship it.',
    features: [
      'Identify high-impact AI opportunities',
      'Build practical proof-of-concepts',
      'Implement production-ready solutions',
    ],
    image: '/brain.png',
  },
  {
    label: 'Custom Software',
    title: 'Development',
    description: 'Building custom software solutions augmented by AI agents, following current best practices.',
    features: [
      'Full-stack web and application development',
      'AI-augmented development for faster delivery',
      'Secure, scalable architecture from the start',
    ],
    image: '/robot.png',
  },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Franzke Technologies - Lightning fast, scalable software solutions and AI consulting." />

    <!-- Open Graph -->
    <meta property="og:title" content="Franzke Technologies" />
    <meta property="og:description" content="Lightning fast, scalable software solutions and AI consulting." />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="/og.png" />

    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <title>Franzke Technologies</title>
  </head>
  <body class="flex min-h-screen flex-col bg-white text-slate-900">
    <!-- Animated background shapes -->
    <div class="bg-shapes-container">
      <div class="bg-shape bg-shape-1"></div>
      <div class="bg-shape bg-shape-2"></div>
      <div class="bg-shape bg-shape-3"></div>
      <div class="bg-shape bg-shape-4"></div>
    </div>

    <!-- Hero Section with embedded header -->
    <div class="hero-section relative">
      <Header variant="dark" />

      <!-- Decorative elements -->
      <div class="absolute right-0 top-1/4 h-64 w-64 rounded-full bg-electric-500/10 blur-3xl z-[1]"></div>
      <div class="absolute left-1/4 top-1/2 h-48 w-48 rounded-full bg-purple-500/10 blur-3xl z-[1]"></div>

      <section class="relative z-[2] pb-32 pt-32 sm:pb-40 sm:pt-44 min-h-[80vh] flex items-center">
        <div class="mx-auto max-w-6xl px-4 sm:px-6">
          <div class="text-center">
            <!-- Hero Content -->
            <p class="section-label text-sm sm:text-base">Software Development and Consulting</p>
            <h1 class="mt-4 font-bold leading-tight">
              <span class="hero-lightning-text relative inline-block text-6xl sm:text-7xl lg:text-8xl">
                Lightning Fast
              </span>
              <br />
              <span class="bg-gradient-to-r from-white to-teal-400 bg-clip-text text-transparent text-3xl sm:text-4xl lg:text-5xl">
                Scalable Software Solutions
              </span>
            </h1>
            <p class="mx-auto mt-6 max-w-2xl text-lg text-slate-300">
              We deliver custom software solutions and AI consulting, backed by 20+ years of software development experience.
            </p>
            <div class="mt-8 flex justify-center gap-4">
              <a
                href="/#contact"
                class="rounded-full border-2 border-electric-500 bg-transparent px-8 py-3 text-base font-medium text-white transition-all hover:bg-electric-500"
              >
                Get in touch
              </a>
            </div>
          </div>
        </div>
      </section>

      <!-- Services Section -->
      <section id="services" class="relative py-16 sm:py-24">
        <div class="mx-auto max-w-6xl px-4 sm:px-6">
          <div class="grid gap-6 md:grid-cols-2">
            {services.map((service, index) => (
              <div class:list={[
                'animate-on-scroll service-card rounded-2xl p-[2px]',
                index === 0 ? 'slide-from-left' : 'slide-from-right'
              ]}>
                <div class="service-card-inner rounded-2xl bg-navy-900/80 backdrop-blur-sm p-8">
                  <!-- Service Image -->
                  <div class="mb-6 flex justify-center">
                    <img src={service.image} alt={service.label} class="h-48 w-48 object-contain" />
                  </div>

                <!-- Service Content -->
                <h3 class="text-2xl font-bold text-white sm:text-3xl">{service.label}</h3>
                <p class="text-lg text-electric-400">{service.title}</p>
                <p class="mt-4 text-slate-300">{service.description}</p>

                <!-- Features List -->
                <ul class="mt-6 space-y-2">
                  {service.features.map((feature) => (
                    <li class="flex items-start gap-2 text-slate-300">
                      <span class="text-electric-400">â€¢</span>
                      {feature}
                    </li>
                  ))}
                </ul>
                </div>
              </div>
            ))}
          </div>
        </div>
      </section>

      <!-- Recent Posts -->
      {recentPosts.length > 0 && (
        <section class="relative z-[2] py-16 sm:py-20">
          <div class="animate-on-scroll slide-from-bottom mx-auto max-w-6xl px-4 sm:px-6">
            <div class="flex items-center justify-between">
              <div>
                <p class="section-label">From the blog</p>
                <h2 class="mt-2 text-2xl font-bold text-white">Latest posts</h2>
              </div>
              <a href="/blog" class="text-base font-medium text-electric-400 hover:text-electric-300">
                View all &rarr;
              </a>
            </div>
            <div class="mt-8 rounded-2xl bg-navy-800/60 backdrop-blur-sm border border-white/10 p-6">
              {recentPosts.map((post) => (
                <BlogPostPreview
                  title={post.data.title}
                  date={post.data.date}
                  description={post.data.description}
                  slug={post.slug}
                  variant="dark"
                />
              ))}
            </div>
          </div>
        </section>
      )}
    </div>

    <main id="main-content" class="flex-1">
      <!-- Contact Section -->
      <section id="contact" class="relative overflow-hidden bg-gradient-to-br from-navy-900 via-navy-800 to-navy-900 py-20 sm:py-28">
        <div class="absolute -left-20 top-0 h-64 w-64 rounded-full bg-electric-500/10 blur-3xl"></div>
        <div class="absolute -right-20 bottom-0 h-64 w-64 rounded-full bg-purple-500/10 blur-3xl"></div>
        <div class="relative mx-auto max-w-6xl px-4 sm:px-6">
          <!-- Section Header -->
          <div class="animate-on-scroll slide-from-bottom text-center mb-12">
            <p class="section-label">Contact Us</p>
            <h2 class="mt-4 text-3xl font-bold text-white sm:text-4xl">
              We'd Love to Hear from You
            </h2>
            <p class="mx-auto mt-4 max-w-2xl text-lg text-slate-300">
              Whether you need help with AI strategy, custom software, or just want to talk through an idea, we'd love to hear from you.
            </p>
          </div>

          <div class="grid gap-8 lg:grid-cols-2">
            <!-- Contact Info -->
            <div class="animate-on-scroll slide-from-left">
              <div class="service-card rounded-2xl p-[2px] h-full">
                <div class="service-card-inner rounded-2xl bg-navy-900/80 backdrop-blur-sm p-8 h-full">
                  <h3 class="text-2xl font-bold text-white mb-8">Get in Touch</h3>

                  <div class="space-y-6">
                    <!-- Phone -->
                    <div class="flex items-start gap-4">
                      <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-electric-500/20">
                        <svg class="h-6 w-6 text-electric-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                        </svg>
                      </div>
                      <div>
                        <p class="text-sm text-slate-400">Phone</p>
                        <a href="tel:+19135229401" class="text-lg text-white hover:text-electric-400 transition-colors">+1 (913) 522-9401</a>
                      </div>
                    </div>

                    <!-- Email -->
                    <div class="flex items-start gap-4">
                      <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-electric-500/20">
                        <svg class="h-6 w-6 text-electric-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                        </svg>
                      </div>
                      <div>
                        <p class="text-sm text-slate-400">Email</p>
                        <a href="mailto:support@franzketechnologies.com" class="text-lg text-white hover:text-electric-400 transition-colors">support@franzketechnologies.com</a>
                      </div>
                    </div>

                    <!-- Location -->
                    <div class="flex items-start gap-4">
                      <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-electric-500/20">
                        <svg class="h-6 w-6 text-electric-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                        </svg>
                      </div>
                      <div>
                        <p class="text-sm text-slate-400">Location</p>
                        <p class="text-lg text-white">Overland Park, KS, USA</p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Contact Form -->
            <div class="animate-on-scroll slide-from-right">
              <div class="service-card rounded-2xl p-[2px] h-full">
                <div class="service-card-inner rounded-2xl bg-navy-900/80 backdrop-blur-sm p-8 h-full">
                  <h3 class="text-2xl font-bold text-white mb-6">Send a Message</h3>

                  <form name="contact" netlify action="/thank-you" class="space-y-4">
                    <div class="grid gap-4 sm:grid-cols-2">
                      <div>
                        <label for="name" class="block text-sm font-medium text-slate-300 mb-2">Name</label>
                        <input
                          type="text"
                          id="name"
                          name="name"
                          class="w-full rounded-lg border border-white/10 bg-navy-800/50 px-4 py-3 text-white placeholder-slate-500 focus:border-electric-500 focus:outline-none focus:ring-1 focus:ring-electric-500 transition-colors"
                          placeholder="Your name"
                        />
                      </div>
                      <div>
                        <label for="email" class="block text-sm font-medium text-slate-300 mb-2">Email</label>
                        <input
                          type="email"
                          id="email"
                          name="email"
                          class="w-full rounded-lg border border-white/10 bg-navy-800/50 px-4 py-3 text-white placeholder-slate-500 focus:border-electric-500 focus:outline-none focus:ring-1 focus:ring-electric-500 transition-colors"
                          placeholder="your@email.com"
                        />
                      </div>
                    </div>

                    <div>
                      <label for="subject" class="block text-sm font-medium text-slate-300 mb-2">Subject</label>
                      <input
                        type="text"
                        id="subject"
                        name="subject"
                        class="w-full rounded-lg border border-white/10 bg-navy-800/50 px-4 py-3 text-white placeholder-slate-500 focus:border-electric-500 focus:outline-none focus:ring-1 focus:ring-electric-500 transition-colors"
                        placeholder="How can we help?"
                      />
                    </div>

                    <div>
                      <label for="message" class="block text-sm font-medium text-slate-300 mb-2">Message</label>
                      <textarea
                        id="message"
                        name="message"
                        rows="4"
                        class="w-full rounded-lg border border-white/10 bg-navy-800/50 px-4 py-3 text-white placeholder-slate-500 focus:border-electric-500 focus:outline-none focus:ring-1 focus:ring-electric-500 transition-colors resize-none"
                        placeholder="Tell us about your project..."
                      ></textarea>
                    </div>

                    <button
                      type="submit"
                      class="w-full rounded-full border-2 border-electric-500 bg-transparent px-6 py-3 text-base font-medium text-white transition-all hover:bg-electric-500"
                    >
                      Send Message
                    </button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>

    <Footer />

    <script>
      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              entry.target.classList.add('is-visible');
            }
          });
        },
        {
          threshold: 0.1,
          rootMargin: '0px 0px -50px 0px',
        }
      );

      document.querySelectorAll('.animate-on-scroll').forEach((el) => {
        observer.observe(el);
      });
    </script>
  </body>
</html>
