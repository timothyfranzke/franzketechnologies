---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import BlogPostPreview from '../components/BlogPostPreview.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog');
const recentPosts = allPosts
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 3);

const services = [
  {
    label: 'AI Integration',
    title: 'AI Strategy & Implementation',
    description: 'Helping teams figure out where AI fits in their workflow and actually ship it.',
    features: [
      'Identify high-impact AI opportunities',
      'Build practical proof-of-concepts',
      'Implement production-ready solutions',
    ],
    align: 'left' as const,
  },
  {
    label: 'Architecture',
    title: 'Delivery Acceleration',
    description: 'Fractional architect work to help teams build and deliver faster.',
    features: [
      'Architecture reviews and recommendations',
      'Process optimization for faster delivery',
      'Hands-on implementation support',
    ],
    align: 'right' as const,
  },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Franzke Technologies - 20 years of architecture, accelerated by AI." />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Franzke Technologies</title>
  </head>
  <body class="flex min-h-screen flex-col bg-white text-slate-900">
    <!-- Animated background shapes -->
    <div class="bg-shapes-container">
      <div class="bg-shape bg-shape-1"></div>
      <div class="bg-shape bg-shape-2"></div>
      <div class="bg-shape bg-shape-3"></div>
      <div class="bg-shape bg-shape-4"></div>
    </div>

    <!-- Hero Section with embedded header -->
    <div class="hero-diagonal relative">
      <div class="hero-gradient-section"></div>
      <div class="hero-white-section"></div>
      <Header variant="dark" />

      <!-- Decorative elements -->
      <div class="absolute right-0 top-1/4 h-64 w-64 rounded-full bg-teal-500/10 blur-3xl z-[1]"></div>
      <div class="absolute left-1/4 top-1/2 h-48 w-48 rounded-full bg-blue-500/10 blur-3xl z-[1]"></div>

      <section class="relative z-[2] pb-20 pt-12 sm:pb-28 sm:pt-16">
        <div class="mx-auto max-w-6xl px-4 sm:px-6">
          <div class="grid items-center gap-12 lg:grid-cols-2">
            <!-- Hero Content -->
            <div>
              <p class="section-label text-sm sm:text-base">Software Development and Consulting</p>
              <h1 class="mt-4 text-4xl font-bold leading-tight sm:text-5xl lg:text-6xl">
                <span class="bg-gradient-to-r from-white to-teal-400 bg-clip-text text-transparent">Software Accelerated by AI.</span>
              </h1>
              <p class="mt-6 text-lg text-slate-300">
                I help teams architect and deliver software faster using AI-augmented workflows and two decades of experience.
              </p>
              <div class="mt-8 flex flex-wrap gap-4">
                <a
                  href="/contact"
                  class="rounded-full bg-teal-500 px-6 py-3 text-base font-medium text-white transition-all hover:bg-teal-400 hover:shadow-lg hover:shadow-teal-500/25"
                >
                  Get started
                </a>
              </div>
            </div>

            <!-- Hero Illustration Placeholder -->
            <div class="relative hidden lg:block">
              <div class="relative mx-auto aspect-square max-w-md">
                <!-- Abstract tech illustration placeholder -->
                <div class="absolute inset-0 rounded-2xl bg-gradient-to-br from-navy-700/50 to-navy-800/50 backdrop-blur-sm"></div>
                <div class="absolute inset-4 rounded-xl border border-teal-500/20 bg-navy-800/50">
                  <div class="flex h-full flex-col items-center justify-center gap-4 p-8">
                    <div class="h-16 w-16 rounded-lg bg-teal-500/20 flex items-center justify-center">
                      <svg class="h-8 w-8 text-teal-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                      </svg>
                    </div>
                    <div class="grid w-full grid-cols-3 gap-2">
                      <div class="h-2 rounded bg-teal-500/30"></div>
                      <div class="h-2 rounded bg-slate-600/50"></div>
                      <div class="h-2 rounded bg-slate-600/50"></div>
                    </div>
                    <div class="grid w-full grid-cols-2 gap-3">
                      <div class="h-20 rounded-lg bg-navy-700/50 border border-slate-600/30"></div>
                      <div class="h-20 rounded-lg bg-navy-700/50 border border-slate-600/30"></div>
                    </div>
                    <div class="w-full h-3 rounded bg-gradient-to-r from-teal-500/40 to-transparent"></div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

    </div>

    <main id="main-content" class="flex-1 -mt-1">
      <!-- Services Introduction -->
      <section class="pt-10 pb-20 sm:pt-14 sm:pb-28">
        <div class="animate-on-scroll slide-from-bottom mx-auto max-w-6xl px-4 text-center sm:px-6">
          <p class="section-label">Services</p>
          <h2 class="mt-4 text-3xl font-bold text-slate-900 sm:text-4xl">
            Helping teams build better software,<br class="hidden sm:block" />
            faster than ever before.
          </h2>
        </div>
      </section>

      <!-- Alternating Feature Sections -->
      {services.map((service, index) => (
        <section class={index % 2 === 1 ? 'bg-slate-50/50' : ''}>
          <div class="mx-auto max-w-6xl px-4 py-16 sm:px-6 sm:py-20">
            <div class:list={[
              'grid items-center gap-12 lg:grid-cols-2',
              service.align === 'right' && 'lg:grid-flow-dense'
            ]}>
              <!-- Content -->
              <div class:list={[
                'animate-on-scroll',
                service.align === 'right' ? 'slide-from-right' : 'slide-from-left',
                service.align === 'right' && 'lg:col-start-1'
              ]}>
                <p class="section-label">{service.label}</p>
                <h3 class="mt-2 text-2xl font-bold text-slate-900 sm:text-3xl">
                  {service.title}
                </h3>
                <p class="mt-4 text-slate-600">{service.description}</p>
                <ul class="mt-6 space-y-3">
                  {service.features.map((feature) => (
                    <li class="flex items-start gap-3 text-slate-600">
                      <svg class="mt-0.5 h-5 w-5 flex-shrink-0 text-teal-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                      {feature}
                    </li>
                  ))}
                </ul>
                <a
                  href="/services"
                  class="mt-6 inline-block rounded-full bg-teal-500 px-5 py-2.5 text-base font-medium text-white transition-all hover:bg-teal-600"
                >
                  Learn more
                </a>
              </div>

              <!-- Illustration Placeholder -->
              <div class:list={[
                'animate-on-scroll relative',
                service.align === 'right' ? 'slide-from-left' : 'slide-from-right',
                service.align === 'right' && 'lg:col-start-2'
              ]}>
                <div class="relative mx-auto aspect-[4/3] max-w-md overflow-hidden rounded-2xl bg-gradient-to-br from-slate-100 to-slate-50 p-8 shadow-lg">
                  <div class="absolute -right-8 -top-8 h-32 w-32 rounded-full bg-teal-100"></div>
                  <div class="absolute -bottom-8 -left-8 h-24 w-24 rounded-full bg-blue-100"></div>
                  <div class="relative flex h-full flex-col items-center justify-center">
                    <div class="h-16 w-16 rounded-xl bg-navy-900 flex items-center justify-center">
                      <svg class="h-8 w-8 text-teal-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        {index === 0 ? (
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                        ) : (
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z" />
                        )}
                      </svg>
                    </div>
                    <div class="mt-4 text-sm font-medium text-slate-500">
                      {service.label}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
      ))}

      <!-- More Services Grid -->
      <section class="py-16 sm:py-20">
        <div class="mx-auto max-w-6xl px-4 sm:px-6">
          <div class="grid gap-6 sm:grid-cols-2">
            <div class="animate-on-scroll slide-from-left rounded-2xl border border-slate-200 bg-white p-8 transition-shadow hover:shadow-lg">
              <div class="h-12 w-12 rounded-lg bg-teal-100 flex items-center justify-center">
                <svg class="h-6 w-6 text-teal-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                </svg>
              </div>
              <h3 class="mt-4 text-xl font-semibold text-slate-900">Workshops & Training</h3>
              <p class="mt-2 text-slate-600">Teaching teams how to integrate AI into their development workflow. Practical, hands-on learning.</p>
            </div>
            <div class="animate-on-scroll slide-from-right rounded-2xl border border-slate-200 bg-white p-8 transition-shadow hover:shadow-lg">
              <div class="h-12 w-12 rounded-lg bg-blue-100 flex items-center justify-center">
                <svg class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                </svg>
              </div>
              <h3 class="mt-4 text-xl font-semibold text-slate-900">Web & Software Development</h3>
              <p class="mt-2 text-slate-600">Full-stack development for web applications, ecommerce platforms, and custom software.</p>
            </div>
          </div>
        </div>
      </section>

      <!-- Recent Posts -->
      {recentPosts.length > 0 && (
        <section class="bg-slate-50 py-16 sm:py-20">
          <div class="animate-on-scroll slide-from-bottom mx-auto max-w-6xl px-4 sm:px-6">
            <div class="flex items-center justify-between">
              <div>
                <p class="section-label">From the blog</p>
                <h2 class="mt-2 text-2xl font-bold text-slate-900">Latest posts</h2>
              </div>
              <a href="/blog" class="text-base font-medium text-teal-600 hover:text-teal-700">
                View all &rarr;
              </a>
            </div>
            <div class="mt-8 rounded-2xl bg-white p-6 shadow-sm">
              {recentPosts.map((post) => (
                <BlogPostPreview
                  title={post.data.title}
                  date={post.data.date}
                  description={post.data.description}
                  slug={post.slug}
                />
              ))}
            </div>
          </div>
        </section>
      )}

      <!-- CTA Section -->
      <section class="relative overflow-hidden bg-gradient-to-br from-navy-900 via-navy-800 to-navy-900 py-20 sm:py-28">
        <div class="absolute -left-20 top-0 h-64 w-64 rounded-full bg-teal-500/10 blur-3xl"></div>
        <div class="absolute -right-20 bottom-0 h-64 w-64 rounded-full bg-blue-500/10 blur-3xl"></div>
        <div class="relative mx-auto max-w-6xl px-4 sm:px-6">
          <div class="animate-on-scroll slide-from-bottom mx-auto max-w-2xl text-center">
            <h2 class="text-3xl font-bold text-white sm:text-4xl">
              Ready to ship faster?
            </h2>
            <p class="mt-4 text-lg text-slate-300">
              Let's talk about how I can help your team build and deliver with AI-augmented workflows.
            </p>
            <a
              href="/contact"
              class="mt-8 inline-block rounded-full border-2 border-teal-500 bg-transparent px-8 py-3 text-base font-medium text-white transition-all hover:bg-teal-500"
            >
              Get in touch
            </a>
          </div>
        </div>
      </section>
    </main>

    <Footer />

    <script>
      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              entry.target.classList.add('is-visible');
            }
          });
        },
        {
          threshold: 0.1,
          rootMargin: '0px 0px -50px 0px',
        }
      );

      document.querySelectorAll('.animate-on-scroll').forEach((el) => {
        observer.observe(el);
      });
    </script>
  </body>
</html>
