---
import BaseLayout from '../layouts/BaseLayout.astro';

const services = [
  {
    title: 'AI Strategy & Implementation',
    description: 'Helping teams figure out where AI fits in their workflow and actually ship it. Not theoretical—practical implementation.',
    details: [
      'Assess your current workflows for AI opportunities',
      'Build proof-of-concepts to validate approaches',
      'Implement production-ready AI features',
      'Train your team to maintain and extend the work',
    ],
    icon: 'lightbulb',
  },
  {
    title: 'Delivery Acceleration',
    description: 'Fractional architect work. Helping teams build and deliver faster through better architecture decisions, process improvements, and AI-augmented workflows.',
    details: [
      'Architecture reviews and recommendations',
      'Technical debt prioritization',
      'Team process optimization',
      'Hands-on implementation support',
    ],
    icon: 'bolt',
  },
  {
    title: 'Workshops & Training',
    description: 'Teaching teams how to integrate AI into their development workflow. Focus on practical, hands-on learning.',
    details: [
      'AI-assisted coding workflows',
      'Prompt engineering for developers',
      'Tool selection and integration',
      'Custom curriculum for your stack',
    ],
    icon: 'book',
  },
  {
    title: 'Web & Software Development',
    description: 'Full-stack development for web applications, ecommerce platforms, and custom software. Modern stacks, fast delivery.',
    details: [
      'Web applications and APIs',
      'Ecommerce platforms',
      'Custom business software',
      'MVP and prototype development',
    ],
    icon: 'code',
  },
];
---

<BaseLayout
  title="Services"
  description="AI consulting, web development, and software architecture services in Kansas City. Practical AI implementation, delivery acceleration, and custom software development from a 20+ year architect."
  keywords="AI consulting Kansas City, web development services, software architecture, custom software development, AI implementation, Overland Park developer"
>
  <!-- Hero -->
  <section class="bg-slate-50 py-16 sm:py-20">
    <div class="mx-auto max-w-6xl px-4 sm:px-6">
      <p class="section-label">What I offer</p>
      <h1 class="mt-4 text-3xl font-bold text-slate-900 sm:text-4xl">Services</h1>
      <p class="mt-4 max-w-2xl text-lg text-slate-600">
        I help teams build and ship faster. Whether you need strategic guidance, hands-on development, or help getting your team up to speed—here's how I can help.
      </p>
    </div>
  </section>

  <!-- Services -->
  <section class="py-16 sm:py-20">
    <div class="mx-auto max-w-6xl px-4 sm:px-6">
      <div class="grid gap-8 lg:grid-cols-2">
        {services.map((service) => (
          <div class="rounded-2xl border border-slate-200 bg-white p-8 transition-shadow hover:shadow-lg">
            <div class="flex items-start gap-4">
              <div class="flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-lg bg-teal-100">
                {service.icon === 'lightbulb' && (
                  <svg class="h-6 w-6 text-teal-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                  </svg>
                )}
                {service.icon === 'bolt' && (
                  <svg class="h-6 w-6 text-teal-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                  </svg>
                )}
                {service.icon === 'book' && (
                  <svg class="h-6 w-6 text-teal-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                  </svg>
                )}
                {service.icon === 'code' && (
                  <svg class="h-6 w-6 text-teal-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                  </svg>
                )}
              </div>
              <div>
                <h2 class="text-xl font-semibold text-slate-900">{service.title}</h2>
              </div>
            </div>
            <p class="mt-4 text-slate-600">{service.description}</p>
            <ul class="mt-6 space-y-2">
              {service.details.map((detail) => (
                <li class="flex items-start gap-3 text-sm text-slate-600">
                  <svg class="mt-0.5 h-5 w-5 flex-shrink-0 text-teal-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  {detail}
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="bg-gradient-to-br from-navy-900 via-navy-800 to-navy-900 py-16 sm:py-20">
    <div class="mx-auto max-w-6xl px-4 text-center sm:px-6">
      <h2 class="text-2xl font-bold text-white sm:text-3xl">Not sure what you need?</h2>
      <p class="mt-4 text-slate-300">
        Let's have a conversation. I'll help you figure out the best path forward.
      </p>
      <a
        href="/contact"
        class="mt-8 inline-block rounded-full bg-teal-500 px-8 py-3 text-sm font-medium text-white transition-all hover:bg-teal-400"
      >
        Get in touch
      </a>
    </div>
  </section>
</BaseLayout>
