---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProjectCard from '../components/ProjectCard.astro';

const projects = {
  enterprise: [
    {
      title: 'NBA TopShots',
      description: 'Consulted on Kafka cluster optimization to scale their NFT platform during peak demand.',
      category: 'Enterprise',
    },
    {
      title: 'NGA (National Geospatial-Intelligence Agency)',
      description: 'Built internal Node.js dashboards for data visualization and operational monitoring.',
      category: 'Government',
    },
    {
      title: 'MyRetailBuddy',
      description: 'Designed and built distributed IoT architecture for gas meter reading systems using AWS IoT Core.',
      category: 'IoT',
    },
  ],
  saas: [
    {
      title: 'Kindercosmos',
      description: 'Built and operated a daycare management platform from 2019-2023. Full-stack development, infrastructure, and customer support.',
      category: 'SaaS',
    },
  ],
  web: [
    {
      title: 'hoorfarlaw.com',
      description: 'Professional website for a law firm. Clean, fast, and easy to maintain.',
      category: 'Web',
      url: 'https://hoorfarlaw.com',
    },
    {
      title: 'kc360gym.com',
      description: 'Website for KC360 Gymnastics, a gymnastics facility I own with my family.',
      category: 'Web',
      url: 'https://kc360gym.com',
    },
    {
      title: 'pathwaymicroschool.com',
      description: 'Website for Pathway Microschool, a local education institution.',
      category: 'Web',
      url: 'https://pathwaymicroschool.com',
    },
    {
      title: 'just4215.com',
      description: 'Ecommerce platform for Just4215 basketball program.',
      category: 'Ecommerce',
      url: 'https://just4215.com',
    },
    {
      title: 'EEclipse',
      description: 'Ecommerce platform for a youth basketball program.',
      category: 'Ecommerce',
    },
  ],
};
---

<BaseLayout title="Work" description="Portfolio of past projects spanning enterprise systems, SaaS platforms, and web development.">
  <!-- Hero -->
  <section class="bg-slate-50 py-16 sm:py-20">
    <div class="mx-auto max-w-6xl px-4 sm:px-6">
      <p class="section-label">Portfolio</p>
      <h1 class="mt-4 text-3xl font-bold text-slate-900 sm:text-4xl">Work</h1>
      <p class="mt-4 max-w-2xl text-lg text-slate-600">
        A selection of projects I've worked on over the years.
      </p>
    </div>
  </section>

  <section class="py-16 sm:py-20">
    <div class="mx-auto max-w-6xl px-4 sm:px-6">
      <!-- Enterprise & Government -->
      <div>
        <p class="section-label">Enterprise & Government</p>
        <h2 class="mt-2 text-2xl font-semibold text-slate-900">Large-scale systems</h2>
        <div class="mt-8 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
          {projects.enterprise.map((project) => (
            <ProjectCard
              title={project.title}
              description={project.description}
              category={project.category}
            />
          ))}
        </div>
      </div>

      <!-- SaaS & Platforms -->
      <div class="mt-16">
        <p class="section-label">SaaS & Platforms</p>
        <h2 class="mt-2 text-2xl font-semibold text-slate-900">Product development</h2>
        <div class="mt-8 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
          {projects.saas.map((project) => (
            <ProjectCard
              title={project.title}
              description={project.description}
              category={project.category}
            />
          ))}
        </div>
      </div>

      <!-- Web & Ecommerce -->
      <div class="mt-16">
        <p class="section-label">Web & Ecommerce</p>
        <h2 class="mt-2 text-2xl font-semibold text-slate-900">Websites & online stores</h2>
        <div class="mt-8 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
          {projects.web.map((project) => (
            <ProjectCard
              title={project.title}
              description={project.description}
              category={project.category}
              url={project.url}
            />
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="border-t border-slate-200 bg-slate-50 py-16 sm:py-20">
    <div class="mx-auto max-w-6xl px-4 text-center sm:px-6">
      <h2 class="text-2xl font-bold text-slate-900">Have a project in mind?</h2>
      <p class="mt-4 text-slate-600">
        I'd love to hear about what you're building.
      </p>
      <a
        href="/contact"
        class="mt-8 inline-block rounded-full bg-teal-500 px-8 py-3 text-sm font-medium text-white transition-all hover:bg-teal-600"
      >
        Let's talk about it
      </a>
    </div>
  </section>
</BaseLayout>
